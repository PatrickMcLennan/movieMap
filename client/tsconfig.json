{
	"compilerOptions": {
		"baseUrl": "./",
		"jsx": "react",
		"module": "commonjs",
		"noImplicitAny": true,
		"outDir": "dist",
		"paths": {
			"Component/*": ["src/components/*"],
			"Context/*": ["src/contexts/*"],
			"Dictionary": ["clientDictionary"],
			"Hook/*": ["src/hooks/*"],
			"Layout/*": ["src/layout/*"],
			"Page/*": ["src/pages/*"],
			"Utility/*": ["src/utils/*"]
		},
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "es5"
	},
	"include": ["./src/**/*"],
	"awesomeTypescriptLoaderOptions": {
		"useBabel": true,
		"babelOptions": {
			"babelrc": false,
			"presets": [["@babel/preset-env", { "targets": "last 5 versions, ie 11", "modules": false }]]
		},
		"babelCore": "@babel/core"
	}
}
